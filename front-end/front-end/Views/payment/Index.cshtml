@model front_end.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center vh-100 payment-page-wrapper">
    <div class="card payment-card-custom p-4 shadow-lg" style="width: 400px;">
        <h2 class="card-title text-center mb-3 fw-bold">Payment Details</h2>
        <p class="text-muted text-center mb-4">Processing your bank transaction...</p>

        <form asp-controller="Payment" asp-action="Confirm" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="RoomId" />
            <input type="hidden" asp-for="From" />
            <input type="hidden" asp-for="To" />
            <input type="hidden" asp-for="TotalPrice" />

            <div class="mb-3">
                <label asp-for="CardHolderName" class="form-label">Card Holder Name</label>
                <input asp-for="CardHolderName" class="form-control" placeholder="John Doe" />
            </div>

            <div class="mb-3">
                <label asp-for="CardNumber" class="form-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" />
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label asp-for="Expiry" class="form-label">Expiry</label>
                    <input asp-for="Expiry" class="form-control" placeholder="MM/YY" />
                </div>
                <div class="col-6">
                    <label asp-for="CVV" class="form-label">CVV</label>
                    <input asp-for="CVV" class="form-control" placeholder="123" />
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Confirm</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .payment-card-custom {
        border-radius: 12px;
    }
    .payment-page-wrapper {
        background-color: #f8f9fa;
    }
</style>
