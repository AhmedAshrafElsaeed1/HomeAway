@{
    ViewData["Title"] = "Payment";
    Layout = "_Layout";
}
<div class="d-flex justify-content-center align-items-center vh-100 payment-page-wrapper">
    <div class="card payment-card-custom p-4 shadow-lg">
        <h2 class="card-title text-center mb-1 fw-bold">Payment Details</h2>
        <p class="text-muted text-center mb-4">Processing your bank transaction...</p>

        <form>
            <div class="form-group row align-items-center mb-3">
                <label for="cardHolderName" class="col-sm-4 col-form-label text-start">Card Holder Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="cardHolderName" placeholder="John Doe">
                </div>
            </div>

            <div class="form-group row align-items-center mb-4">
                <label for="cardNumber" class="col-sm-4 col-form-label text-start">Card Number</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456">
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-6 d-flex align-items-center">
                    <label for="expiryDate" class="col-form-label text-start me-3">Expiry</label>
                    <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY">
                </div>

                <div class="col-6 d-flex align-items-center">
                    <label for="cvv" class="col-form-label text-start me-3">CVV</label>
                    <input type="text" class="form-control" id="cvv" placeholder="123">
                </div>
            </div>

            <div class="d-grid gap-3 d-md-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg custom-btn-width">Confirm</button>
                <button type="button" class="btn btn-secondary btn-lg custom-btn-width">Cancel</button>
            </div>
        </form>
    </div>
</div>