@model IEnumerable<front_end.DTOs.RoomDto>
@{
    ViewData["Title"] = "Provider";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-md-3 col-lg-2 bg-dark text-white min-vh-100 p-3">

            <h3 class="text-center mb-4">Hotel Owner</h3>

            <ul class="nav flex-column">

                <li class="nav-item mb-2">
                    <a href="/Provider/Index" class="nav-link text-white">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a href="/Provider/Rooms" class="nav-link text-white fw-bold">
                        <i class="fas fa-bed me-2"></i> Manage Rooms
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a href="/Home/Index" class="nav-link text-white">
                        <i class="fas fa-home me-2"></i> Back to Home
                    </a>
                </li>

                <li class="nav-item mt-4">
                  <a class="logout btn btn-danger mt-3" asp-controller="Login" asp-action="Logout">Logout</a>

                </li>

            </ul>

        </div>

        <!-- MAIN CONTENT -->
        <div class="col-md-9 col-lg-10 p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Manage Rooms</h2>
                <a asp-controller="Signup" asp-action="Rooms" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Room
                </a>
            </div>

            <div class="card shadow">
                <div class="card-body">

                    <table class="table table-bordered table-hover bg-white">
                        <thead class="table-dark">
                            <tr>
                                <th>Room Number</th>
                                <th>Type</th>
                                <th>Price ($)</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var room in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@room.Number</td>

                                    <td>
                                        @switch (room.Type)
                                        {
                                            case 0: <span>Single</span>; break;
                                            case 1: <span>Double</span>; break;
                                            case 2: <span>Triple</span>; break;
                                            case 3: <span>Quadruple</span>; break;
                                            case 4: <span class="text-primary fw-bold"><i class="fas fa-crown"></i> Penthouse</span>; break;
                                            default: <span>Unknown</span>; break;
                                        }
                                    </td>

                                    <td>
                                        <form asp-action="UpdatePrice" method="post" class="d-flex align-items-center">
                                            <input type="hidden" name="roomId" value="@room.Id" />
                                            <div class="input-group input-group-sm" style="width: 130px;">
                                                <span class="input-group-text">$</span>
                                                <input type="number" name="newPrice" value="@room.Price" class="form-control" />
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Save</button>
                                        </form>
                                    </td>

                                    <td>
                                        @if (room.IsAvailable)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check-circle"></i> Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Booked</span>
                                        }
                                    </td>

                                    <td>
                                        <a asp-action="DeleteRoom"
                                           asp-route-id="@room.Id"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Are you sure you want to remove this room?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>

    </div>
</div>
