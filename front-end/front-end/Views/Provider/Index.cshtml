@model front_end.ViewModel.ProviderDashboardViewModel
@{
    ViewData["Title"] = "Provider";
    Layout = "_Layout";
}

<div class="d-flex">

    <!-- Sidebar -->
    <div class="bg-dark text-white vh-100 p-3" style="width: 250px;">
        <h3 class="text-center mb-4">Hotel Owner</h3>

        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a href="/Provider/Index" class="nav-link text-white">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="/Provider/Rooms" class="nav-link text-white fw-bold">
                    <i class="fas fa-bed me-2"></i> Manage Rooms
                </a>
            </li>
            <li class="nav-item mb-2">
                <a href="/Home/Index" class="nav-link text-white">
                    <i class="fas fa-home me-2"></i> Back to Home
                </a>
            </li>
            <li class="nav-item mt-4">
                 <a class="logout btn btn-danger mt-3" asp-controller="Login" asp-action="Logout">Logout</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4" style="background-color: #f8f9fa;">
        <h2 class="mb-4">Provider Dashboard - @Model.HotelInfo?.Name</h2>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-primary shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Rooms</h5>
                        <p class="display-4 fw-bold">@Model.Rooms?.Count ?? 0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-success shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Revenue</h5>
                        <p class="display-4 fw-bold">$@Model.TotalRevenue</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-white bg-warning shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Active Reservations</h5>
                        <p class="display-4 fw-bold">@Model.Reservations?.Count(r => r.Status == 1) ?? 0</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Reservations -->
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold">
                Recent Reservations
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Room</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Total Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var res in Model.Reservations?.OrderByDescending(r => r.From).Take(10) ?? Enumerable.Empty<front_end.DTOs.ReservationDto>())
                        {
                            <tr>
                                <td>@res.Id</td>
                                <td>@res.RoomId</td>
                                <td>@res.From.ToShortDateString()</td>
                                <td>@res.To.ToShortDateString()</td>
                                <td>@res.TotalPrice.ToString("C")</td>
                                <td>
                                    @switch (res.Status)
                                    {
                                        case 0:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case 1:
                                            <span class="badge bg-success">Confirmed</span>
                                            break;
                                        case 2:
                                            <span class="badge bg-danger">Canceled</span>
                                            break;
                                        case 3:
                                            <span class="badge bg-info text-dark">Completed</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Unknown</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
