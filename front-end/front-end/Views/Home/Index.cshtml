@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="hero-section">
    <div class="search-box-container">
        <form asp-controller="Home" asp-action="Search" method="post" class="search-box">
            <h2>Find Your Perfect Stay</h2>
            <div class="search-inputs">
                <input type="text" name="destination" placeholder="Where are you going?" class="input-destination" />
                <input type="date" name="checkIn" class="input-date" />
                <input type="date" name="checkOut" class="input-date" />
                <select name="guests">
                    <option value="1">1 Guest</option>
                    <option value="2">2 Guests</option>
                    <option value="3">3 Guests</option>
                    <option value="4">4 Guests</option>
                    <option value="5">5 Guests</option>
                </select>
                <button type="submit" class="btn btn-search"><i class="fas fa-search"></i> Search</button>
            </div>
        </form>
    </div>
</section>
<h2 class="section-title">Featured Hotels</h2>
<div class="featured-hotel-card">
    <img src="~/images/pic2.jpg" alt="Grand Plaza Hotel">
    <div class="details">
        <h3>Grand Plaza Hotel</h3>
        <p>New York, USA</p>
        <div class="rating">⭐⭐⭐⭐⭐ <span>4.5 (128 reviews)</span></div>
        <span class="price-tag">$199</span>
        <button class="btn btn-details">View Details</button>
    </div>
</div>