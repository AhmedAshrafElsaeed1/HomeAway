@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="hero-section">
    <div class="search-box-container">
        <div class="search-box">
            <h2>Find Your Perfect Stay</h2>
            <div class="search-inputs">
                <input type="text" placeholder="Where are you going?" class="input-destination">
                <input type="date" class="input-date">
                <input type="date" class="input-date">
                <select>
                    <option>1 Guest</option>
                    <option>2 Guests</option>
                    <option>3 Guests</option>
                    <option>4 Guests</option>
                    <option>5 Guests</option>
                </select>

                <button class="btn btn-search"><i class="fas fa-search"></i> Search</button>
            </div>
        </div>
    </div>
</section>

<h2 class="section-title">Featured Hotels</h2>
<div class="featured-hotel-card">
    <img src="~/images/pic2.jpg" alt="Grand Plaza Hotel">
    <div class="details">
        <h3>Grand Plaza Hotel</h3>
        <p>New York, USA</p>
        <div class="rating">⭐⭐⭐⭐⭐ <span>4.5 (128 reviews)</span></div>
        <span class="price-tag">$199</span>
        <button class="btn btn-details">View Details</button>
    </div>
</div>