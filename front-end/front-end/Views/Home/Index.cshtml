@model List<front_end.DTOs.RoomDto>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";

    var rooms = Model ?? new List<front_end.DTOs.RoomDto>();
}

<section class="hero-section">
    <div class="search-box-container">
        <form asp-controller="Home" asp-action="Search" method="post" class="search-box">
            <h2>Find Your Perfect Stay</h2>
            <div class="search-inputs">
                <input type="text" name="destination" placeholder="Where are you going?" class="input-destination" />
                <input type="date" name="checkIn" class="input-date" />
                <input type="date" name="checkOut" class="input-date" />
                <select name="guests">
                    <option value="1">1 Guest</option>
                    <option value="2">2 Guests</option>
                    <option value="3">3 Guests</option>
                    <option value="4">4 Guests</option>
                    <option value="5">5 Guests</option>
                </select>
                <button type="submit" class="btn btn-search"><i class="fas fa-search"></i> Search</button>
            </div>
        </form>
    </div>
</section>

<h2 class="section-title mt-5 mb-4 text-center">Featured Rooms</h2>

<div class="row justify-content-center">
    @foreach (var room in rooms.Take(4))
    {
        <div class="col-md-3 col-sm-6 mb-4 d-flex justify-content-center">
            <div class="card featured-room-card text-center shadow-sm" style="width: 100%; max-width: 280px;">
                <img src="~/images/pic4.jpg" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">Room @room.Number</h5>
                    <p class="card-text text-muted mb-3">@room.Type</p>
                    <a asp-controller="Reserve" asp-action="Index" asp-route-id="@room.Id" class="btn btn-primary mt-auto">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .featured-room-card img {
        height: 180px;
        object-fit: cover;
        border-radius: 8px 8px 0 0;
    }

    .featured-room-card .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 1.8rem;
    }

    .search-box-container {
        margin-bottom: 40px;
    }
</style>
