@model front_end.ViewModel.LogInViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">

        <h3 class="text-center mb-2">Welcome to HomeAway</h3>
        <p class="text-center text-muted mb-4">Please log in or sign up to continue</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Index" asp-controller="Login" method="post">

            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

            <a asp-controller="Signup" asp-action="Index" class="btn btn-outline-primary w-100">
                Sign Up
            </a>

        </form>
    </div>
</div>
