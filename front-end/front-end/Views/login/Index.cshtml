@{
    ViewData["Title"] = "login";
    Layout = "_Layout";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">

        <h3 class="text-center mb-2">Welcome to HomeAway</h3>
        <p class="text-center text-muted mb-4">Please log in or sign up to continue</p>

        <form asp-action="Index" asp-controller="Login" method="post">

            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input type="email" name="UserName" class="form-control" placeholder="Enter your email" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter your password" required>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

            <a asp-controller="Signup" asp-action="Index" class="btn btn-outline-primary w-100">
                Sign Up
            </a>

            <!--
            <div class="text-center mt-3">
                <a href="#">Forgot your password?</a>
            </div>
            -->

        </form>
    </div>
</div>
