@inject front_end.Interfaces.IAuthService AuthService
@{
    var currentUser = AuthService.GetCurrentUser();
    var roles = currentUser?.Role ?? new List<string>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeAway</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-4 fixed-top">

            <a class="navbar-brand fs-3 fw-bold" asp-controller="Home" asp-action="Index">HomeAway</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Search" asp-action="Index">Search</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reserve" asp-action="Index">Reserve</a></li>

                    @if (currentUser != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">Profile</a>
                        </li>

                        @if (roles.Contains("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                        }
                        else if (roles.Contains("Provider"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Provider" asp-action="Index">Provider</a></li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary text-white px-3 py-1" asp-controller="Login" asp-action="Index">Login</a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </header>


    <main class="mt-1 pt-1">
        @RenderBody()   
    </main>


    @RenderSection("Scripts", required: false)

</body>
</html>
