<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeAway</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">HomeAway</div>
            <ul class="navbar-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Search" asp-action="Index">Search</a></li>
                <li><a asp-controller="Reserve" asp-action="Index">Reserve</a></li>
                <li><a asp-controller="Profile" asp-action="Index">Profile</a></li>
                <li><a asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                <li>
                <a asp-controller="Login" asp-action="Index" class="btn-login">Login</a></li>
                
            </ul>
        </nav>


    </header>

    <main>
        @RenderBody()
    </main>

    <!-- المودال -->
    <div id="auth-modal" class="modal">
        <div class="form-container modal-content">
            <span class="close-btn">&times;</span>

            <div class="form-header">
                <h2>Welcome to HomeAway</h2>
                <p>Please login or sign up to continue</p>
                <div class="tab-switch">
                    <a href="#" class="active" data-tab="login-form">Login</a>
                    <a href="#" data-tab="signup-form">Sign Up</a>
                </div>
            </div>

            <form id="login-form" class="active">
                <input type="email" placeholder="Email Address" required>
                <input type="password" placeholder="Password" required>
                <div class="checkbox-group">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me">Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="#" class="forgot-password">Forgot your password?</a>
            </form>

            <form id="signup-form">
                <input type="text" placeholder="Full Name" required>
                <input type="email" placeholder="Email Address" required>
                <input type="password" placeholder="Password" required>
                <input type="password" placeholder="Confirm Password" required>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
