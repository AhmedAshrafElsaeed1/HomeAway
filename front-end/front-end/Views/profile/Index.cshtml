@model front_end.ViewModel.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<div class="container mt-4 profile-layout row">
    <!-- Sidebar -->
    <aside class="col-md-3 profile-sidebar mb-4">
        <div class="card p-3 text-center">
            <div class="user-avatar rounded-circle bg-primary text-white mx-auto mb-2"
                 style="width:60px; height:60px; display:flex; align-items:center; justify-content:center; font-size:24px;">
                @(string.IsNullOrEmpty(Model.CurrentUser?.FullName)
                                ? "G"
                                : Model.CurrentUser.FullName.Substring(0, 1).ToUpper())
            </div>
            <h5>@(Model.CurrentUser?.FullName ?? "Guest")</h5>
            <p class="text-muted mb-2">@(!string.IsNullOrEmpty(Model.CurrentUser?.Email) ? Model.CurrentUser.Email : "Not provided")</p>
        </div>

        <nav class="nav flex-column mt-3">
            <a class="nav-link active" href="#">My Bookings</a>
            <a class="nav-link" href="#">Profile</a>
            <a class="nav-link" href="#">Wishlist</a>
            <a class="nav-link" href="#">Settings</a>
            <a class="nav-link text-danger" href="/Login/Logout">Logout</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="col-md-9 profile-content">
        <h3 class="mb-3">My Bookings</h3>

        @if (Model.Bookings != null && Model.Bookings.Any())
        {
            @foreach (var booking in Model.Bookings)
            {
                <div class="card mb-2 p-2 d-flex justify-content-between align-items-center flex-md-row flex-column">
                    <div>
                        <h5>Room #@booking.RoomId</h5>
                        <p class="mb-0">@booking.From.ToShortDateString() - @booking.To.ToShortDateString()</p>
                    </div>
                    <div>
                        <span class="badge @(booking.Status == 1 ? "bg-success" : "bg-primary")">
                            @(booking.Status == 1 ? "Completed" : "Confirmed")
                        </span>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No bookings found.</p>
        }

        <div class="row mt-4 g-3">
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>@Model.TotalBookings</h4>
                    <p>Total Bookings</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>@Model.Completed</h4>
                    <p>Completed Stays</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>@Model.Upcoming</h4>
                    <p>Upcoming Trips</p>
                </div>
            </div>
        </div>
    </div>
</div>
