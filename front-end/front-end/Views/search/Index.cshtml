@model front_end.ViewModel.SearchViewModel

@{
    var results = Model?.Results ?? new List<front_end.DTOs.HotelDto>();
}


<div class="search-layout">
    <!-- Sidebar Filters -->
    <aside class="sidebar-filter">
        <h3>Filters</h3>
        <div class="filter-group">
            <h4>Price Range</h4>
            <input type="range" min="0" max="1000" value="500">
            <div class="range-display">$0 - $1000</div>
        </div>

        <div class="filter-group">
            <h4>Star Rating</h4>
            <div class="rating-checkbox">⭐⭐⭐⭐⭐</div>
            <div class="rating-checkbox">⭐⭐⭐⭐ & up</div>
        </div>

        <div class="filter-group">
            <h4>Amenities</h4>

            <div class="amenity">
                <input type="checkbox" id="wifi">
                <label for="wifi">Free WiFi</label>
            </div>

            <div class="amenity">
                <input type="checkbox" id="pool">
                <label for="pool">Swimming Pool</label>
            </div>

            <div class="amenity">
                <input type="checkbox" id="parking">
                <label for="parking">Free Parking</label>
            </div>
        </div>

        <button class="btn btn-apply">Apply Filters</button>
    </aside>

    <!-- Results List -->
    <div class="results-list">

        <h2>
            @(Model?.Results?.Count ?? 0) hotels found
            @if (!string.IsNullOrEmpty(Model?.Destination))
            {
                @: in @Model.Destination
            }
        </h2>

        @if (Model?.Results != null && Model.Results.Any())
        {
            @foreach (var hotel in Model.Results)
            {
                <div class="hotel-result-card">
                    <img src="~/images/pic1.jpg" alt="Hotel Image">

                    <div class="info">
                        <h3>@hotel.Name</h3>
                        <p>@hotel.Address</p>
                        <div class="rating">@hotel.Rating</div>
                        <div class="amenities-list">
                            <!-- لو عندك Amenities ممكن تحطيها هنا -->
                        </div>
                    </div>

                    <div class="price-action">
                        <button class="btn btn-select">Select Room</button>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No hotels found matching your search criteria.</p>
        }
    </div>
</div>
