@model front_end.ViewModel.HotelRegisterViewModel

@{
    ViewData["Title"] = "Register Hotel";
}

<div class="container py-5">
    <div class="card shadow p-4 rounded-4">
        <form asp-action="RegisterHotel" method="post" enctype="multipart/form-data">
            <h2 class="text-center fw-semibold mb-4">Register your hotel</h2>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Hotel Name</label>
                        <input asp-for="HotelName" class="form-control" />
                        <span asp-validation-for="HotelName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hotel Address</label>
                        <input asp-for="HotelAddress" class="form-control" />
                        <span asp-validation-for="HotelAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-4 rounded-3 bg-primary text-white">
                        <h5 class="fw-semibold">Photos of the hotel</h5>
                        <p>Upload up to 10 photos</p>
                        <input asp-for="Photos" type="file" multiple class="form-control bg-white text-dark" />
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 shadow-sm fw-semibold">Next</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
