@{
    ViewData["Title"] = "signup";
    Layout = "_Layout";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 text-center" style="max-width: 400px; width: 100%; border-radius: 15px;">

        <h3 class="text-primary fw-bold mb-2">Sign Up As</h3>
        <p class="text-muted mb-4">Choose your role for better experience</p>

        <!-- Customer -->
        <a asp-controller="Signup" asp-action="ascustomer"
           class="btn btn-outline-primary w-100 mb-3 d-flex align-items-center justify-content-center gap-2 py-2"
           style="font-size: 18px; border-radius: 10px;">
            <span style="font-size: 24px;">👤</span>
            <span>Customer</span>
        </a>

        <!-- Hotel Owner -->
        <a asp-controller="Signup" asp-action="AsHotelOwner"
           class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center gap-2 py-2"
           style="font-size: 18px; border-radius: 10px;">
            <span style="font-size: 24px;">🏨</span>
            <span>Hotel Owner</span>
        </a>

    </div>
</div>
