@{
    ViewData["Title"] = "signup";
    Layout = "_Layout";
}
<div class="container mt-5">

    <div class="card p-4 shadow-sm" style="border-radius: 16px;">
        <h2 class="text-center fw-bold mb-4">Enter your rooms</h2>

        <!-- Stepper -->
       
        <!-- Main Room Content -->
        <div class="row">
            <!-- Left -->
            <div class="col-md-6">
                <h5 class="fw-bold mb-3">Room Details</h5>

                <div class="mb-3">
                    <label class="form-label">Room Number</label>
                    <input type="text" class="form-control" placeholder="">
                </div>

                <div class="mb-3">
                    <label class="form-label">Room Type</label>
                    <input type="text" class="form-control" placeholder="">
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" placeholder="">
                </div>

                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" class="form-control" placeholder="">
                </div>
            </div>

            <!-- Right - Photo Box -->
            <div class="col-md-6">
                <div class="p-4" style="background:#007bff; border-radius:14px; color:#fff;">
                    <h5 class="fw-bold">Photos of the room</h5>
                    <small>upload up to 10 photos</small>

                    <div class="mt-3">
                        <input type="file" class="form-control bg-light" style="border:none;">
                    </div>

                    <button class="btn btn-light mt-3 fw-bold px-4">upload files</button>
                </div>
            </div>
        </div>

        <!-- Confirm Button -->
        <div class="text-center mt-4">
            <button class="btn btn-primary px-4">Confirm</button>
        </div>

    </div>
</div>