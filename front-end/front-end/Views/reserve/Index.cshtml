@{
    ViewData["Title"] = "Reserve";
    Layout = "_Layout";
}

<div class="hotel-gallery">
    <img src="~/images/pic4.jpg" alt="Main room view" class="main-image">
    <div class="side-images">
        <img src="~/images/pic3.jpg" alt="Side view 1">
        <img src="~/images/pic2.jpg" alt="Side view 2">
    </div>
</div>

<div class="hotel-content-booking">
    <div class="hotel-details-content">
        <h1>Grand Plaza Hotel</h1>
        <div class="rating">4.5/5 (128 reviews) | Manhattan, New York</div>
        <h3 class="section-title">Amenities</h3>
        <ul class="amenities-list-details">
            <li><i class="fas fa-wifi"></i> Free WiFi</li>
            <li><i class="fas fa-parking"></i> Free Parking</li>
            <li><i class="fas fa-swimming-pool"></i> Swimming Pool</li>
            <li><i class="fas fa-dumbbell"></i> Fitness Center</li>
        </ul>

        <h3 class="section-title">Available Rooms</h3>
        <div class="room-card">
            <img src="~/images/pic4.jpg" alt="Deluxe King Room">
            <div class="room-info">
                <h4>Deluxe King Room</h4>
                <p>Spacious room with king bed, city view, and luxury amenities</p>
                <div class="room-options">
                    <span>Free Cancellation</span> | <span>**Breakfast Included**</span>
                </div>
            </div>
            <div class="room-price-action">
                <div class="price-per-night">$199 <span>per night</span></div>
                <button class="btn btn-primary">Book Now</button>
            </div>
        </div>
    </div>

    <aside class="booking-widget">
        <h3>Book Your Stay</h3>
        <div class="form-group">
            <label>Check-in Date</label>
            <input type="date">
        </div>
        <div class="form-group">
            <label>Check-out Date</label>
            <input type="date">
        </div>
        <div class="form-group">
            <label>Guests</label>
            <select><option>1 Adult</option></select>
        </div>
        <div class="form-group">
            <label>Rooms</label>
            <select><option>1 Room</option></select>
        </div>

        <div class="price-summary">
            <p>$199 x 3 nights <span>$597</span></p>
            <p>Taxes & Fees <span>$59.70</span></p>
            <p class="total">Total <span>$656.70</span></p>
        </div>
        <button class="btn btn-reserve">Reserve Now</button>
    </aside>
</div>
